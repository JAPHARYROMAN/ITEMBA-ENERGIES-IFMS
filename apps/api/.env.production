NODE_ENV=production
PORT=3001
FRONTEND_ORIGIN=https://app.example.com
REQUEST_BODY_LIMIT=1mb
DATABASE_URL=postgresql://user:password@db-host:5432/ifms
RUN_MIGRATIONS_ON_STARTUP=false
ALLOW_PROD_STARTUP_MIGRATIONS=false
ENABLE_SWAGGER=false
REPORTS_EXPLAIN=false
SWAGGER_BASIC_USER=prod-admin
SWAGGER_BASIC_PASS=replace-with-secret
JWT_ACCESS_SECRET=replace-with-strong-random-secret-at-least-32-chars
JWT_REFRESH_SECRET=replace-with-strong-random-secret-at-least-32-chars
JWT_ACCESS_TTL=900
JWT_REFRESH_DAYS=7
REPORTS_CACHE_ENABLED=true
REPORTS_CACHE_MAX_ENTRIES=1000
REPORTS_CACHE_TTL_SECONDS_DEFAULT=120
REPORTS_CACHE_TTL_SECONDS_OVERVIEW=120
REPORTS_CACHE_TTL_SECONDS_DAILY_OPERATIONS=120
REPORTS_CACHE_TTL_SECONDS_STOCK_LOSS=120
REPORTS_CACHE_TTL_SECONDS_PROFITABILITY=120
REPORTS_CACHE_TTL_SECONDS_CREDIT_CASHFLOW=120
REPORTS_CACHE_TTL_SECONDS_STATION_COMPARISON=180
REPORTS_SLOW_QUERY_THRESHOLD_MS=2000
OPS_METRICS_ENABLED=false
GOVERNANCE_ENABLED=true
ALLOW_OVERLAPPING_SHIFTS=false
SHIFT_VARIANCE_REQUIRE_REASON_THRESHOLD=0
SALES_DISCOUNT_REQUIRE_MANAGER_THRESHOLD=10
SALES_ROUNDING_TOLERANCE=0.01
DELIVERY_VARIANCE_REQUIRE_REASON_THRESHOLD=0
