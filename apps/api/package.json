{
  "name": "@ifms/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:local": "nest start --watch",
    "start:staging": "node --env-file=.env.staging dist/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node --env-file=.env.production dist/main",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:ci": "drizzle-kit migrate",
    "db:migrate:prod": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "ts-node -r tsconfig-paths/register src/database/seed.ts",
    "db:reset-admin": "ts-node -r tsconfig-paths/register src/database/reset-admin.ts",
    "lint": "tsc -p tsconfig.json --noEmit",
    "test": "jest",
    "test:integration": "jest --runInBand --testMatch \"<rootDir>/test/**/*.e2e-spec.ts\"",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/swagger": "^8.0.7",
    "@nestjs/schedule": "^4.1.1",
    "@nestjs/throttler": "^6.2.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "drizzle-orm": "^0.36.4",
    "helmet": "^8.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^11.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.28.1",
    "typescript": "~5.7.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
"dotenv": "^16.4.5",
    "@nestjs/testing": "^10.2.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0"
  }
}
